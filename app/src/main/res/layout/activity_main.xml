<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@null"
    tools:context="com.zlin.translate.MainActivity">

    <Button
        android:text="开启翻译"
        android:id="@+id/btn_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="菜单"
        android:layout_below="@+id/btn_show"
        android:id="@+id/btn_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="分享给好友"
        android:layout_below="@+id/btn_menu"
        android:id="@+id/btn_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <Button
        android:layout_below="@+id/btn_show"
        android:text="关闭翻译"
        android:id="@+id/btn_hide"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_hit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="提示：截屏区域不要太大，否则识别速度会变慢"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="联系方式 yiketranslate@163.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
